{
  "rules": {
    "sessions": {
      "$session_id": {
        ".read": "auth != null",
        ".write": "auth != null && !data.exists()",
        "players": {
           "$uid": {
             ".write": "auth != null && auth.uid === $uid",
             ".validate": "newData.child('status').isString()"
           }
        }
      }
    }
  }
}
